    "version": "0.2.0",
    "configurations": [
        {
            "name": "myapp",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "myapp (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "myapp (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
        {
            "name": "Flutter (lib/main.dart)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            // 在启动调试前，先执行名为 "install_dependencies" 的任务
            "preLaunchTask": "install_dependencies" 
          }
    ]
}